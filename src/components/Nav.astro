---
const links = ['Home', 'Work', 'Brews']
---

<header
  class='flex justify-center items-center py-12 px-24 max-sm:px-5 max-sm:py-10'
>
  <nav>
    <ol class='flex gap-8'>
      {
        links.map((link) => (
          <li>
            <a href={link === 'Home' ? '/' : link.toLowerCase()}>{link}</a>
          </li>
        ))
      }
    </ol>
  </nav>
</header>
