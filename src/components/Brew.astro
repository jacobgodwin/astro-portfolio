---
interface Props {
  date: string
  time: string
  beans: string
  roaster: string
  styles?: string
}

const { date, time, beans, roaster, styles } = Astro.props
---

<dl class=`flex flex-col ${styles}`>
  <dt class='underline'>{`${date} at ${time}`}</dt>
  <dt class='italic'>{beans}</dt>
  <dt class='font-bold'>{roaster}</dt>
</dl>
