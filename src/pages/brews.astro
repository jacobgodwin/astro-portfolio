---
import { getCollection } from 'astro:content'
import BaseLayout from '../layouts/BaseLayout.astro'
import Brew from '../components/Brew.astro'

const brews = await getCollection('brews')
---

<BaseLayout title='Brews - Jacob Godwin'>
  <div class='flex flex-col justify-start items-start gap-5'>
    <span>Past Brews:</span>
    {
      brews.slice(1, brews.length).map((brew) => {
        return (
          <Brew
            date={brew.data.date}
            time={brew.data.time}
            beans={brew.data.beans}
            roaster={brew.data.roaster}
          />
        )
      })
    }
  </div>
</BaseLayout>

