---
import Nav from '../components/Nav.astro'
import { ClientRouter } from 'astro:transitions'
import Sidebar from '../components/Sidebar.astro'
import Footer from '../components/Footer.astro'
import '@fontsource/atkinson-hyperlegible'
interface Props {
  title: string
  description?: string
}

const {
  title,
  description = 'Pesonal portfolio website for Jacob Godwin, a web developer',
} = Astro.props
---

<!doctype html>
<html lang='en' class='font-prime bg-neutral-900 text-white'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content={description} />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
    <ClientRouter />
  </head>
  <body class='flex flex-col justify-between min-h-screen p-10 font-atkinson'>
    <Nav />
    <main class='flex justify-between gap-20 flex-grow min-w-[70%]'>
      <div class='min-w-[15%] max-lg:hidden'></div>
      <slot />
      <Sidebar />
    </main>
    <Footer />
  </body>
</html>
